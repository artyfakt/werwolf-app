{
  "name": "de.kaktus42.werwolfhelper",
  "displayName": "Werwolf",
  "version": "1.2.1",
  "description": "A simple helper for Werwolf.",
  "main": "index.js",
  "keywords": [
    "ecosystem:cordova"
  ],
  "author": "Alexander Vowinkel",
  "license": "Apache-2.0",
  "dependencies": {
    "@reduxjs/toolkit": "^1.8.2",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.1.5",
    "@testing-library/user-event": "^14.2.0",
    "onsenui": "^2.12.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-onsenui": "^1.12.0",
    "react-redux": "^8.0.2",
    "react-scripts": "^5.0.1",
    "typescript": "^4.7.3"
  },
  "scripts": {
    "start": "BROWSER=none react-scripts start",
    "build": "react-scripts build",
    "build-cordova": "cordova build android --release -- --buildConfig build.json",
    "build-bundle": "cd platforms/android/ && ./gradlew :app:bundleRelease",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "homepage": "./",
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/node": "^14.18.21",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^16.9.16",
    "@types/react-onsenui": "^2.9.17",
    "@types/react-redux": "^7.1.24",
    "cordova-android": "^9.1.0",
    "cordova-plugin-whitelist": "^1.3.5"
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "react/jsx-uses-react": "off",
      "react/react-in-jsx-scope": "warn"
    },
    "overrides": [
      {
        "files": [
          "**/*.ts?(x)"
        ],
        "rules": {
          "react/jsx-uses-react": "off",
          "react/react-in-jsx-scope": "off"
        }
      }
    ]
  },
  "cordova": {
    "plugins": {
      "cordova-plugin-whitelist": {}
    },
    "platforms": [
      "android"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
